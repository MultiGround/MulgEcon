class Shop
{
    List<shopItem> shopItem;
    string guiTitle;

    Shop(List<shopItem> shopItem, string guiTitle)
    {
        this.shopItem = shopItem;
        this.guiTitle= guiTitle;
    }

    PaginatedGui gui = Gui.paginated().title(Component.text(guiTitle)).rows(6).create();

    paginatedGui.setItem(6, 3, ItemBuilder.from(Material.PAPER).setName("Previous").asGuiItem(event -> paginatedGui.previous()));
    paginatedGui.setItem(6, 7, ItemBuilder.from(Material.PAPER).setName("Next").asGuiItem(event -> paginatedGui.next()));

    for(int i = 0; i < material.Count; i++)
    {
        GuiItem guiItem = ItemBuilder.from(shopItem[i].material).setName(shopItem[i].Name).asGuiItem();
        gui.addItem(guiItem);
    }

    void openGui(Player player)
    {
        gui.open(player);
    }
}

class shopItem
{
    string name;
    Material material;
    int value;

    shopItem(string name, Material material, int value)
    {
        this.name = name;
        this.material = material;
        this. value = value;
    }
}

